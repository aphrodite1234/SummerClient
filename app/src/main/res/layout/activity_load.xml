<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        android:src="@mipmap/ic_app_foreground"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical">

        <EditText
            android:layout_marginBottom="10dp"
            android:inputType="phone"
            android:background="@drawable/load_edit_shap"
            android:id="@+id/EditText01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="手机号" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:background="@drawable/load_edit_shap"
                android:id="@+id/EditText02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="密码"/>

            <ImageView
                android:id="@id/pass3_image"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/eye"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/EditText02"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton

                android:id="@+id/Button01"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/login"
                android:background="#00000000"
                />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:clickable="true"
            android:layout_toLeftOf="@+id/fenge"
            android:id="@+id/Button02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户注册" />

        <TextView
            android:id="@+id/fenge"
            android:layout_centerInParent="true"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/blue"/>

        <TextView
            android:clickable="true"
            android:layout_toRightOf="@+id/fenge"
            android:id="@+id/Button03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码" />

    </RelativeLayout>

</RelativeLayout>