<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/home_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip">

            <com.example.z1229.view.CircleImageView
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_app_round" />

            <LinearLayout
                android:id="@+id/line_search"
                android:layout_width="260.0dip"
                android:layout_height="28.0dip"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_corner"
                android:visibility="visible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5.0dip"
                    android:src="@mipmap/ic_top_search"
                    android:layout_marginStart="5.0dip" />

                <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="5dip"
                    android:text="搜索"
                    android:textColor="#d5d5d5"
                    tools:ignore="InvalidId" />
            </LinearLayout>
            <com.example.z1229.view.CircleImageView
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_top_xiaoxi"/>
        </RelativeLayout>
    </FrameLayout>

    <com.example.z1229.view.BannerView.BannerView
        android:id="@+id/home_bannerview"
        android:layout_width="match_parent"
        android:layout_height="140dip"
        android:layout_marginLeft="13dip"
        android:layout_marginStart="13dip"
        android:layout_marginRight="13dip"
        android:layout_marginEnd="13dip"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        app:bottomColor="#453e3e3e"
        app:dotDistance="2dp"
        app:dotGravity="right"
        app:dotIndicatorFocus="#ff0000"
        app:dotIndicatorNormal="#ffffff"
        app:dotShape="circle"
        app:dotSize="6dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/home_add_record"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        <com.example.z1229.view.Rc.RCRelativeLayout
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:background="@color/blue"
            app:clip_background="true"
            app:round_corner="10dp"
            app:stroke_color="#66000000"
            app:stroke_width="2dp">
            <ImageView
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_home_xuetang"/>

        </com.example.z1229.view.Rc.RCRelativeLayout>


            <TextView
                android:text="@string/home_add_record"
                android:gravity="center"
                android:layout_marginTop="5dip"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_GI_value"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <com.example.z1229.view.Rc.RCRelativeLayout
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:background="#BCEE68"
                app:clip_background="true"
                app:round_corner="10dp"
                app:stroke_color="#66000000"
                app:stroke_width="2dp">
                <ImageView
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:src="@mipmap/ic_home_gi"
                    android:layout_centerInParent="true"/>
            </com.example.z1229.view.Rc.RCRelativeLayout>


            <TextView
                android:text="@string/home_GI_value"
                android:gravity="center"
                android:layout_marginTop="5dip"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_science_diet"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <com.example.z1229.view.Rc.RCRelativeLayout
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:background="#32CD32"
                app:clip_background="true"
                app:round_corner="10dp"
                app:stroke_color="#66000000"
                app:stroke_width="2dp">
                <ImageView
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:src="@mipmap/ic_home_diet"
                    android:layout_centerInParent="true"/>
            </com.example.z1229.view.Rc.RCRelativeLayout>

            <TextView
                android:text="@string/home_science_diet"
                android:gravity="center"
                android:layout_marginTop="5dip"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_wiki"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <com.example.z1229.view.Rc.RCRelativeLayout
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:background="#8E8E38"
                app:clip_background="true"
                app:round_corner="10dp"
                app:stroke_color="#66000000"
                app:stroke_width="2dp">
                <ImageView
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:src="@mipmap/ic_home_wiki"
                    android:layout_centerInParent="true"/>
            </com.example.z1229.view.Rc.RCRelativeLayout>

            <TextView
                android:text="@string/home_wiki"
                android:gravity="center"
                android:layout_marginTop="5dip"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title_social"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1C1C1C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24.0dip"
            android:layout_marginTop="20.0dip"
            android:layout_marginBottom="14.0dip"
            android:text="@string/plus"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24.0dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:drawableEnd="@drawable/ic_arrow_right_24dp"
            android:drawablePadding="2.0dip"
            android:drawableRight="@drawable/ic_arrow_right_24dp"
            android:padding="5.0dip"
            android:text="@string/more1"
            android:textColor="#737373"
            android:textSize="12.0sp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_social_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0"
        android:scrollbars="vertical"/>
</LinearLayout>