<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dip">
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="@string/home"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/title_black"
            tools:ignore="InvalidId" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_top_xiaoxi"/>
    </RelativeLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            app:elevation="0dp">

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/bg_shadow"
                app:layout_scrollFlags="scroll|snap">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/home_add_record"
                            android:layout_width="60dip"
                            android:layout_height="60dip"
                            android:background="@drawable/home_record_shape_corner">
                            <ImageView
                                android:layout_width="35dip"
                                android:layout_height="35dip"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/ic_home_xuetang"/>

                        </RelativeLayout>


                        <TextView
                            android:text="@string/home_add_record"
                            android:gravity="center"
                            android:layout_marginTop="5dip"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"/>
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/home_GI_value"
                            android:layout_width="60dip"
                            android:layout_height="60dip"
                            android:background="@drawable/home_gi_shape_corner">
                            <ImageView
                                android:layout_width="35dip"
                                android:layout_height="35dip"
                                android:src="@mipmap/ic_home_gi"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>


                        <TextView
                            android:text="@string/home_GI_value"
                            android:gravity="center"
                            android:layout_marginTop="5dip"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/home_science_diet"
                            android:layout_width="60dip"
                            android:layout_height="60dip"
                            android:background="@drawable/home_diet_shape_corner">
                            <ImageView
                                android:layout_width="35dip"
                                android:layout_height="35dip"
                                android:src="@mipmap/ic_home_diet"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>

                        <TextView
                            android:text="@string/home_science_diet"
                            android:gravity="center"
                            android:layout_marginTop="5dip"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/home_wiki"
                            android:layout_width="60dip"
                            android:layout_height="60dip"
                            android:background="@drawable/home_wiki_shape_corner">
                            <ImageView
                                android:src="@mipmap/ic_home_wiki"
                                android:layout_width="35dip"
                                android:layout_height="35dip"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>

                        <TextView
                            android:text="@string/home_wiki"
                            android:gravity="center"
                            android:layout_marginTop="5dip"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true" />
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/tv_title_social"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/title_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24.0dip"
                        android:layout_marginTop="20.0dip"
                        android:layout_marginBottom="14.0dip"
                        android:text="@string/tangyouquan"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        android:id="@+id/home_social_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:drawableEnd="@drawable/ic_arrow_right_24dp"
                        android:drawablePadding="2.0dip"
                        android:drawableRight="@drawable/ic_arrow_right_24dp"
                        android:padding="5.0dip"
                        android:text="@string/more1"
                        android:textColor="@color/gray_font"
                        android:textSize="12.0sp"
                        android:gravity="center_vertical"/>
                </RelativeLayout>
            </LinearLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/home_social_recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>
