<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip">

        <com.example.z1229.view.CircleImageView
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_app_round" />

        <LinearLayout
            android:id="@+id/line_search"
            android:layout_width="260.0dip"
            android:layout_height="28.0dip"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_corner"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5.0dip"
                android:src="@mipmap/ic_top_search"
                android:layout_marginStart="5.0dip" />

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dip"
                android:text="搜索"
                android:textColor="#d5d5d5"
                tools:ignore="InvalidId" />
        </LinearLayout>
        <com.example.z1229.view.CircleImageView
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_top_xiaoxi"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@mipmap/fragment_user_background"
        android:gravity="center"
        android:orientation="vertical">

        <com.mob.tools.gui.RoundRectLayout
            android:id="@+id/fragment_user_head"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="13dp"
            android:scaleType="centerCrop"
            app:clip_background="false"
            app:round_as_circle="true"
            android:background="@mipmap/fragment_user_default_head">

            <ImageView
                android:id="@+id/fragment_user_gender"
                android:layout_width="22.5dp"
                android:layout_height="22.5dp"
                android:src="@mipmap/ic_home_social_gender_man"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                tools:ignore="RtlHardcoded" />
        </com.mob.tools.gui.RoundRectLayout>

        <TextView
            android:id="@+id/fragment_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/fragment_user_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="qwersafasdfsadfasfsaffasdfsadf"/>

    </LinearLayout>
</LinearLayout>
